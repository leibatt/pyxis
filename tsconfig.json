{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["build/**/*"]
}
