{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts", "types/*.d.ts"],
  "exclude": ["src/index.umd.ts","test/**/*.ts", "build-test/**/*", "build/**/*","examples/**/*","node_modules"]
}
